@page
@model BookList.Pages.Booklist.CreateModel
@{
}
<h2 class="text-xl-center">Add New Book</h2>
<div class="border container" style="padding: 30px">
    <form action="/" method="post">
        <div class=" form-group row">
            <div class="col-3 text-right">
                <label asp-for="Book.Name"></label>

            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 text-right">
                <label asp-for="Book.Author"></label>

            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 text-right">
                <label asp-for="Book.ISBN"></label>

            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
               <input type ="submit" class="btn btn-success form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-primary form-control">Back to Index</a>
            </div>
        </div>

    </form>
</div>